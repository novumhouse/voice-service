{
  "name": "voice-service",
  "version": "1.0.0",
  "description": "ElevenLabs Voice Conversation API for multi-client consumption",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t voice-service .",
    "docker:run": "docker run -p 8080:8080 --env-file .env voice-service",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop voice-service",
    "pm2:restart": "pm2 restart voice-service"
  },
  "drizzle-kit": {
    "out": "drizzle",
    "schema": "./src/db/schema.ts",
    "dialect": "postgresql"
  },
  "keywords": [
    "elevenlabs",
    "voice",
    "api",
    "conversation",
    "webrtc",
    "microservice"
  ],
  "author": "ReKeep Team",
  "license": "MIT",
  "dependencies": {
    "@upstash/redis": "^1.35.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/novumhouse/rekeep-voice-service.git"
  },
  "bugs": {
    "url": "https://github.com/novumhouse/rekeep-voice-service/issues"
  },
  "homepage": "https://github.com/novumhouse/rekeep-voice-service#readme"
}
